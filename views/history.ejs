    <body>
        <!--[if lt IE 7]>
            <p class="browsehappy">You are using an <strong>outdated</strong> browser. Please <a href="#">upgrade your browser</a> to improve your experience.</p>
        <![endif]-->

        <!-- NavBar -->
        <nav class="navbar fixed-top navbar-expand-lg navbar-light bg-danger">
            <div class="container-fluid">
              <a class="navbar-brand" href="/main">Tax Management System</a>
              <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
              </button>
              <div class="collapse navbar-collapse" id="navbarSupportedContent">
                <ul class="navbar-nav me-auto mb-2 mb-lg-0">
                    <li>
                        <form action="/logout" method="get">
                            <button type="submit" class="btn btn-outline-success m-1">LogOut</button>
                        </form>
                    </li>
                </ul>
              </div>
            </div>
        </nav>

        <div style="background-image: url('images/tax_a.jpeg'); height:800px; align-items: center  !important;">
            <br>
            <br>
            <br>
            <p style="text-align: center; font-size: 3rem;color: antiquewhite;">HISTORY (Fetching last 5 records only)</p>
            <br>
            <br>
         <ul >
           <% for(var x = 0; x < items.length ; x++) { %>
             <li style="text-align: center;"> 
                <div class="card text-white bg-secondary mb-3" style="max-width: 40rem; ">
                    <div class="card-header">Total Tax: <%= items[x].total_tax %></div>
                    <div class="card-body">
                      <h5 class="card-title">Income: <%= items[x].income %></h5>
                      <p class="card-text"> Date Recorded: <%= dateArray[x] %></p>
                    </div>
                  </div>
             </li>
            <% } %>
         </ul>              
        </div>
        <!-- JS Bootstrap Link -->
        <script src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.6.0/dist/umd/popper.min.js" integrity="sha384-KsvD1yqQ1/1+IA7gi3P0tyJcT3vR+NdBTt13hSJ2lnve8agRGXTTyNaBYmCR/Nwi" crossorigin="anonymous"> </script>
